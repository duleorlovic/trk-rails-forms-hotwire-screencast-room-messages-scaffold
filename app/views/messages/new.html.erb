<h1>New Message</h1>

<%= turbo_frame_tag 'new_message' do %>
  <%= form_with model: [ @message.room, @message ], html: { 'data-controller': 'reset-form', 'data-action': 'turbo:submit-end->reset-form#reset' } do |form| %>
    <%= form.text_field :content %>
    <%= form.submit 'Send' %>
  <% end %>
<% end %>

<%= link_to 'Back', @message.room %>
